{
  "manifest_version": 3,
  "name": "Alon Pet v2.5",
  "version": "2.5",
  "description": "Alon with Jump, Sleep, and Money reactions.",
  "permissions": ["activeTab", "scripting", "alarms", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "alon.gif", 
        "alon-jump.gif", 
        "alon-sleep.gif", 
        "alon-money.gif"
      ], 
      "matches": ["<all_urls>"]
    }
  ]
}
