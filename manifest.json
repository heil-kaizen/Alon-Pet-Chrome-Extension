{
  "manifest_version": 3,
  "name": "Alon Pet v2",
  "version": "2.1",
  "permissions": ["activeTab", "scripting", "alarms", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["mood.js", "content.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["alon.gif"], 
      "matches": ["<all_urls>"]
    }
  ]
}
